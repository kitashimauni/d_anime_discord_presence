{
    "name": "dAnimeDiscordPresence",
    "version": "0.1.0",
    "description": "dアニメストアでの視聴ステータスをDiscordに表示する拡張です。",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "manifest_version": 3,
    "content_scripts": [
        {
            "matches": [
                "https://animestore.docomo.ne.jp/animestore/sc_d_pc*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "permissions": [
        "nativeMessaging",
        "background"
    ],
    "background": {
        "service_worker": "background.js"
    }
}